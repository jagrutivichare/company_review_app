<!doctype html>
<html lang="en">
  <head>
  	<% include partials/head.ejs %>

  </head>
  <body>
  	<% include partials/header.ejs %>
  	<% if (companies.length == 0) { %>
  		<div style="margin: 2%;"><small class="text-muted"><I>No result found</I></small></div>
  	<% } else { %>
  		<div style="margin: 2%;">
  		<ul class="list-group">
	  	<% for (var i=0; i<companies.length; i++) { %>
	  		<a href="/company_reviews/<%= companies[i].id %>">
			  <li class="list-group-item d-flex justify-content-between align-items-center">
			    <div><i style="margin-right: 15px;" class="fas fa-users"></i><%= companies[i].name %></div>
			    <div>
			    	<span>
			    		<i class="fas fa-comments"></i>
			    		<span style="margin-right: 40px;" class="badge badge-primary badge-pill">
					    	<%= companies[i].total_reviews %>
					    </span>
			    	</span>
				    <div style="float: right;">
	                      <% for (var j=0; j< companies[i].ratings; j++) { %>
	                        <i class="fas fa-star" style="color:green"></i>
	                      <% } %>
	                      <% for (var j=0; j< (5-companies[i].ratings); j++) { %>
	                        <i class="far fa-star"></i>
	                      <% } %> 
	                </div> 
			    </div>
			    
			  </li>
			</a>
		<% } %>
		</ul>
		</div>
  	<% } %>

  	<% include partials/footer.ejs %>
    <% include partials/scripts.ejs %>
  </body>
</html>



